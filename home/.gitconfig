[user]
	name = Daniel Rodríguez Troitiño
	email = drodrigueztroitino@yahoo.es
[color]
	ui = auto
[core]
	excludesfile = ~/.gitignore
	trustctime = false
	pager = diff-so-fancy | less --tabs 4 -RFX
[pager]
	show = less -x4
[alias]
	ci = commit
	cv = commit -v
	amend = commit --amend -C HEAD

	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	lp = log -p
	ls = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative --decorate
	ll = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative --decorate --numstat

	cb = checkout -b
	ct = checkout --track

	ap = add -p

	st = status -sb

	br = branch

	co = checkout

	df = diff

	pr = pull --rebase
	prd = "!_() { git stash save && git pull --rebase && git stash pop; }; _"

	ps = push --set-upstream

	undo = reset --soft HEAD^

	count = shortlog -sn

	credit = "!_() { git commit --amend --author \"$1 <$2>\" -C HEAD; }; _"

	sl = stash list
	ss = stash save
	sp = stash pop
	sa = stash apply

	sup = submodule update --init --recursive
[github]
	user = drodriguez
[merge]
	tool = opendiff
[push]
	default = current
[diff]
	renames = copies
	mnemonicprefix = true
	compactionHeuristic = true
[rerere]
	enabled = true
[credential]
	helper = osxkeychain
[merge]
	defaultToUpstream = true
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
[color "diff"]
	old = red strike
	new = green italic
[interactive]
	diffFilter = diff-so-fancy --patch
